{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "offSide": true
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\*(?:if|for|while|repeat|question|button|navigation|switch|group|service|program|events|experiment|component|header|settings)\\b.*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
