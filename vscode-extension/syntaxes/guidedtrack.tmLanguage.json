{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GuidedTrack",
  "scopeName": "source.guidedtrack",
  "patterns": [
    { "include": "#comments" },
    { "include": "#expression-keywords" },
    { "include": "#keywords" },
    { "include": "#sub-keywords" },
    { "include": "#expression-line" },
    { "include": "#label-definition" },
    { "include": "#strings" },
    { "include": "#bold-text" },
    { "include": "#answer-options" },
    { "include": "#text-interpolation" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-dash.guidedtrack",
      "match": "--.*$"
    },
    "expression-keywords": {
      "patterns": [
        {
          "match": "^(\\t*)(\\*)(if|while|for|repeat|goto|return):\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.whitespace.guidedtrack" },
            "2": { "name": "punctuation.definition.keyword.guidedtrack" },
            "3": { "name": "keyword.control.guidedtrack" },
            "4": {
              "patterns": [
                { "include": "#comments" },
                { "include": "#strings" },
                { "include": "#numbers" },
                { "include": "#operators" },
                { "include": "#built-in-functions" },
                { "include": "#identifiers" }
              ]
            }
          }
        }
      ]
    },
    "keywords": {
      "match": "^(\\t*)(\\*)(audio|button|chart|clear|component|database|email|events|experiment|for|goto|group|header|html|if|image|label|list|login|maintain|navigation|page|points|program|progress|purchase|question|quit|randomize|repeat|return|service|set|settings|share|summary|switch|trigger|video|wait|while)\\b",
      "captures": {
        "1": { "name": "punctuation.whitespace.guidedtrack" },
        "2": { "name": "punctuation.definition.keyword.guidedtrack" },
        "3": { "name": "keyword.control.guidedtrack" }
      }
    },
    "sub-keywords": {
      "match": "^(\\t+)(\\*)(after|answers|before|blank|body|cancel|caption|classes|click|confirm|countdown|data|date|default|description|error|every|everytime|frequency|hide|icon|identifier|management|max|method|min|multiple|name|other|path|placeholder|required|reset|save|searchable|send|shuffle|start|startup|status|subject|success|tags|throwaway|time|tip|to|trendline|type|until|what|when|with|xaxis|yaxis)\\b",
      "captures": {
        "1": { "name": "punctuation.whitespace.guidedtrack" },
        "2": { "name": "punctuation.definition.keyword.guidedtrack" },
        "3": { "name": "keyword.other.sub-keyword.guidedtrack" }
      }
    },
    "expression-line": {
      "begin": "^(\\t*)(>>)",
      "end": "$",
      "beginCaptures": {
        "1": { "name": "punctuation.whitespace.guidedtrack" },
        "2": { "name": "keyword.operator.expression-start.guidedtrack" }
      },
      "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#built-in-functions" },
        { "include": "#identifiers" }
      ]
    },
    "label-definition": {
      "match": "^(\\t*)(\\*label):\\s*(.+)$",
      "captures": {
        "1": { "name": "punctuation.whitespace.guidedtrack" },
        "2": { "name": "keyword.control.label.guidedtrack" },
        "3": { "name": "entity.name.label.guidedtrack" }
      }
    },
    "answer-options": {
      "match": "^(\\t+)(\\*)(?![a-zA-Z])(.*)$",
      "captures": {
        "1": { "name": "punctuation.whitespace.guidedtrack" },
        "2": { "name": "punctuation.definition.answer.guidedtrack" },
        "3": { "name": "string.unquoted.answer-option.guidedtrack" }
      }
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.guidedtrack",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-interpolation" }
          ]
        }
      ]
    },
    "bold-text": {
      "name": "markup.bold.guidedtrack",
      "match": "\\*[^*:]+\\*",
      "captures": {
        "0": { "name": "markup.bold.guidedtrack" }
      }
    },
    "string-interpolation": {
      "name": "meta.embedded.expression.guidedtrack",
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.interpolation.begin.guidedtrack" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.interpolation.end.guidedtrack" }
      },
      "patterns": [
        { "include": "#identifiers" },
        { "include": "#numbers" },
        { "include": "#operators" }
      ]
    },
    "text-interpolation": {
      "name": "meta.embedded.expression.guidedtrack",
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.interpolation.begin.guidedtrack" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.interpolation.end.guidedtrack" }
      },
      "patterns": [
        { "include": "#identifiers" },
        { "include": "#numbers" },
        { "include": "#operators" }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.guidedtrack",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.guidedtrack",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.guidedtrack",
          "match": "\\b(and|or|not|in)\\b"
        },
        {
          "name": "keyword.operator.comparison.guidedtrack",
          "match": "(<=|>=|<|>|=)"
        },
        {
          "name": "keyword.operator.arithmetic.guidedtrack",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.arrow.guidedtrack",
          "match": "->"
        }
      ]
    },
    "built-in-functions": {
      "name": "support.function.guidedtrack",
      "match": "\\b(abs|acos|asin|atan|atan2|calendar|ceil|combine|cos|date|day|dayofweek|exp|floor|hours|join|keys|log|max|min|minutes|month|now|random|round|seconds|shuffle|sin|size|sort|sqrt|sum|tan|time|type|values|year)\\b"
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.property.guidedtrack",
          "match": "(?<=\\.)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.guidedtrack",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
